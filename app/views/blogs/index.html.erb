<p style="color: green"><%= notice %></p>
<h1>Blogs</h1>
<table>
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>Body</th>
      <th colspan="4">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= link_to blog.status, toggle_status_blog_path(blog) %></td>
        <td><%= link_to "Show this blog", blog %></td>
        <td><%= link_to "Edit this blog", edit_blog_path(blog) %></td>
        <td><%= button_to "Destroy this blog", blog, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
